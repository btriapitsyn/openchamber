{
    "name": "openchamber",
    "version": "1.0.0",
    "description": "OpenChamber desktop companion for the OpenCode AI coding agent",
    "type": "module",
    "packageManager": "pnpm@10.22.0",
    "bin": {
        "openchamber": "./bin/cli.js"
    },
    "main": "server/index.js",
    "files": [
        "bin/",
        "server/",
        "dist/",
        "dist-electron/",
        "electron/",
        "fix-deprecation.js",
        "electron-builder.yml",
        "prompt-enhancer-defaults.json"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "keywords": [
        "opencode",
        "ai",
        "coding",
        "openchamber",
        "cli"
    ],
    "author": "fedaykin.dev",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently -n \"backend,vite\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm run dev:backend\" \"pnpm run dev:vite\"",
        "dev:backend": "node server/index.js --port 3001",
        "dev:vite": "vite",
        "dev:electron": "pnpm run build:electron:main && concurrently -n \"backend,vite,tsc,electron\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgYellow.bold\" \"pnpm run dev:backend\" \"pnpm run dev:vite\" \"pnpm run dev:electron:compile\" \"pnpm run dev:electron:start\"",
        "dev:electron:compile": "tsc -w -p tsconfig.electron.json --preserveWatchOutput",
        "dev:electron:start": "cross-env OPENCHAMBER_DEV_SERVER_URL=http://127.0.0.1:5173 OPENCHAMBER_DEV_API_BASE=http://127.0.0.1:3001/api nodemon --watch dist-electron --ext js,cjs --delay 200ms --exec \"electron dist-electron/main.js\"",
        "build": "tsc -b && vite build",
        "build:watch": "concurrently \"pnpm run tsc:watch\" \"pnpm run vite:watch\"",
        "tsc:watch": "tsc -b --watch",
        "vite:watch": "vite build --watch",
        "build:package": "tsc -b && vite build",
        "build:electron:main": "tsc -p tsconfig.electron.json && node electron/copy-preload.js",
        "build:electron": "pnpm run build:package && pnpm run build:electron:main",
        "package:electron": "pnpm run build:electron && electron-builder --mac --publish never",
        "start:electron": "pnpm run build:electron && electron dist-electron/main.js",
        "dev:electron:prod-like": "pnpm run build:electron && concurrently -k -n \"web,main,electron\" \"pnpm run build:watch\" \"pnpm run dev:electron:compile\" \"nodemon --watch dist-electron --ext js,cjs --exec \\\"electron dist-electron/main.js\\\"\"",
        "lint": "eslint .",
        "preview": "vite preview",
        "test:package": "pnpm run build:package && pnpm pack",
        "start": "node server/index.js",
        "dev:prod-like": "concurrently -k -n \"build,start\" \"pnpm run build:watch\" \"nodemon --watch dist --ext js,json --exec \\\"node server/index.js\\\"\"",
        "cli": "node bin/cli.js",
        "postinstall": "node fix-deprecation.js",
        "convert-theme": "tsx scripts/convert-theme.ts"
    },
    "dependencies": {
        "@fontsource/ibm-plex-mono": "^5.2.7",
        "@fontsource/ibm-plex-sans": "^5.1.1",
        "@ibm/plex": "^6.4.1",
        "@opencode-ai/sdk": "^1.0.65",
        "@radix-ui/react-collapsible": "^1.1.12",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-toggle": "^1.1.10",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@remixicon/react": "^4.7.0",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/xterm": "^5.3.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "^1.1.1",
        "electron-context-menu": "^4.1.1",
        "electron-store": "^11.0.2",
        "express": "^5.1.0",
        "flowtoken": "^1.0.40",
        "http-proxy-middleware": "^3.0.5",
        "next-themes": "^0.4.6",
        "node-pty": "^1.0.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^15.6.6",
        "remark-gfm": "^4.0.1",
        "simple-git": "^3.28.0",
        "sonner": "^2.0.7",
        "strip-json-comments": "^5.0.3",
        "tailwind-merge": "^3.3.1",
        "yaml": "^2.8.1",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@tailwindcss/postcss": "^4.0.0",
        "@types/node": "^24.3.1",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "electron": "^38.2.0",
        "electron-builder": "^24.13.3",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "nodemon": "^3.1.7",
        "tailwindcss": "^4.0.0",
        "tsx": "^4.20.6",
        "tw-animate-css": "^1.3.8",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.2"
    }
}
