{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.electron.tsbuildinfo",
    "sourceMap": true
  },
  "include": ["electron/**/*.ts"]
}
